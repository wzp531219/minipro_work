/* pages/shopTrolley/shopDetail/shopDetail.wxss */
@import "../../../style/common.wxss";

page {
  /* height: 100%; */
}

.shopDetail_wrap {
  width: 100%;
  height: 100%;
}

.shopDetail_imgBox {
  width: 750rpx;
  height: 750rpx;
}

.shopDetail_imgBox .shopDetail_img {
  width: 100%;
  height: 100%;
}

.shopDetail_Info {
  height: 162rpx;
  padding: 40rpx 24rpx 0;
}

.shopDetail_price {
  margin-top: 30rpx;
}

.shopDetail_marprice {
  margin-left: 20rpx;
}

.promotion {
  height: 104rpx;
  line-height: 104rpx;
  margin-top: 16rpx;
  padding: 0 24rpx;
}

.bot_left {
  padding: 0 15rpx;
}

.customer, .collection {
  width: 130rpx;
}

.customer, .collection {
  line-height: 38rpx;
}

.customer_iconbox, .collection_iconbox {
  width: 33rpx;
  height: 33rpx;
  margin: 0 auto;
}

.customer_icon {
  width: 100%;
  height: 100%;
  display: block;
}

.addShop, .buyNow {
  width: 230rpx;
  height: 98rpx;
}

.bot_oper {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
}

.btn-contact {
  border: none!important;
  background: transparent;
  padding: 0;
}
button::after{
  border: none;
}

.desc{
  padding:0 24rpx;
  margin-top: 16rpx;
}
.condition{
  padding:0 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  clear: both;
}
.conditionName{
  margin-right: 20rpx;
  position: absolute;
}
.tips{
  margin-left:80rpx;
}
.tip{
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
  float: left;
  padding: 10rpx 20rpx;
}
.select{
  background-color: #eee;
  color: #fff;
}
.priceInfo{
  margin-left: 100rpx;
  height: 60rpx;
}
.minus, .add{
  border: 1rpx solid #ccc;
  width: 50rpx;
  line-height: 60rpx;
}
.count{
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  width: 80rpx;
  line-height: 60rpx;
}