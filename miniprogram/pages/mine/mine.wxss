/* pages/mine/mine.wxss */
@import "../../style/common.wxss";
page{
  height: 100%;
}
.mine_con{
  height: 100%;
}
.mine_wrap {
  width: 100%;
  height: 364rpx;
  padding: 20rpx 24rpx;
  background-image: url("https://777a-wzp-nouoh-1300726591.tcb.qcloud.la/mini_work/mine1.png?sign=472a578eecf09c55d7afb4602657ba87&t=1575554065");
  background-size: 100% 100%;
}
.headbox {
  overflow:hidden;
  display: block;
  width: 82rpx;
  height: 82rpx;
  position: relative;
  border: 8rpx solid #ff9e8e;
  border-radius: 50%;
  margin-right: 10rpx;
}
.mine-header-img{
  object-fit: cover;
  width: 82rpx;
  height: 82rpx;
  display: block;
  position: absolute;
  top:50%;
  left:50%;
  border-radius: 50%;
  transform: translate(-50%,-50%);
}
.userNickName{
  line-height: 82rpx;
}
.openVip{
  width: 155rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 40rpx;
  border: 2rpx solid #fff;
}
.mine_info_data{
  margin-top: 50rpx;
  height: 120rpx;
}
.mine_info_item{
  flex:1;
  align-items: center;
}
/* 分割线 */
.spaceLine{
  width: 2px;
  height: 40rpx;
  border-right: 2rpx solid #ff9e8e;
}
.mine_info_modules {
  border-radius: 16rpx;
  background-color: rgb(255, 255, 255);
  width: 702rpx;
  height: 213rpx;
  padding: 54rpx 30rpx 37rpx 30rpx;
}
.mine_info_mod_icon{
  /* width: 49rpx; */
  height: 49rpx;
}
.mine_info_mod_img{
  width: 100%;
  height: 100%;
}
.mine_info_mod_tit{
  margin-top: 25rpx;
}
.mine_info_list{
  margin-top: 146rpx;
}
