/* pages/home/home.wxss */
@import "../../style/common.wxss";

.page-body {
  padding: 0 24rpx;
}

.home_swiper {
  width: 704rpx;
  height: 300rpx;
}

.home_swiper_item {
  border-radius: 18rpx;
}

.home_swiper_item .slide-image {
  width: 100%;
  height: 100%;
}

.module_wrap {
  margin-top: 30rpx;
  margin-bottom: 14rpx;
  display: flex;
  padding: 0 24rpx;
}

.module_item {
  flex: 1;
  padding: 0 24rpx;
  text-align: center;
}

.module_box {
  width: 92rpx;
  height: 92rpx;
}

.module_box .module_img {
  width: 100%;
  height: 100%;
}

.module_tit {
  height: 62rpx;
  line-height: 62rpx;
}

/* 分割线 */

.cut-off_rule {
  height: 30rpx;
}

/* 限时秒购 */

.limited_purchase {
  padding: 0 24rpx;
  height: 340rpx;
}

.limited_top {
  height: 80rpx;
  padding: 0 5rpx;
}

.limited_top_l,.limited_top_r{
  display: flex;
  align-items: center;
}
.limited_top_time{
  margin-left: 10rpx;
}
.purchase_icon {
  width: 31rpx;
  height: 31rpx;
  margin-right: 14rpx;
}
.limited_top_block{
  width: 32rpx;
  height: 32rpx;
  margin: 0 8rpx;
}
.limited_box{
  height: 242rpx;
}
.limited_item{
  width: 160rpx;
  margin-right: 20rpx;
}
.limited_item:last-child{
  margin-right: 0;
}
.limited_icon{
  width: 160rpx;
  height: 160rpx
}
.limited_icon .limited_img{
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
.limited_tit{
  margin-top: 18rpx;
}
/* 业态 */
.subClass_wrap{
  height: 99rpx;
  padding: 0 24rpx;
  border-bottom: 2rpx solid #e5e5e5;
}
.subClass_box{
  height: 99rpx;
  position: relative;
}
.subClass_item{
  margin-right:68rpx;
}
.subClass_item:last-child{
  margin-right: 0;
}
.bot_select_bar {
  display: flex;
  justify-content: center;
  width: 40rpx;
  position: absolute;
  left: 6rpx;
  bottom: 19rpx;
  transform-origin: 0 0;
  transform: translate3d(0rpx, 0rpx, 0rpx);
  transition-property: all;
  transition-timing-function: cubic-bezier (0.645, 0.045, 0.355, 1);
  transition-duration: 0.1s;
  
}
.bot_select_bar .bot_active_line {
  height: 6rpx;
  background-color: #fe5746;
  width: 40rpx;
}
/* 业态下面的列表 */
.subContent{
  padding: 20rpx 24rpx;
  flex-wrap: wrap;
  display: flex;
}
.sunContent_item{
  width: 345rpx;
  margin: 0 14rpx 26rpx 0;
  /* margin-right: 20rpx;
  margin-bottom: 26rpx; */
}
.sunContent_item:nth-child(2n){
  margin-right: 0rpx;
}
.sunContent_item_img{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

