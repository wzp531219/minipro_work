/* pages/shopTrolley/shopTrolley.wxss */
@import "../../style/common.wxss";
.shopTip{
  height: 86rpx;
  padding: 0 22rpx;
  line-height: 86rpx;
}
.right_arrow{
  width: 34rpx;
  height: 34rpx;
}
.right_arrow_img{
  width: 100%;
  height: 100%;
  display: block;
}
.shopping_wrap{
  margin-top: 16rpx;
}
.shopping_item{
  height: 328rpx;
  padding: 24rpx 20rpx 27rpx 20rpx;
  margin-bottom: 16rpx;
}
.storeLogo{
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin:0 10rpx;
}
.vouchers_btn{
  width: 84rpx;
  height: 34rpx;
}
.shopInfo{
  height: 220rpx;
  margin-top: 10rpx;
}
.isSelect{
  width: 39rpx;
  height: 39rpx;
  margin-right: 14rpx;
}
.isSelect_icon{
  width: 100%;
  height: 100%;
  display: block;
}
.shop_pic{
  width: 180rpx;
  height: 220rpx;
}
.shop_Img{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.shopInfo_detail{
  width: 460rpx;
  height: 220rpx;
  margin-left: 16rpx;
}
.shopName{
  margin-bottom: 16rpx;
}
.shopColor_btn{
  width: 113rpx;
  height: 30prx;
  margin-bottom: 32rpx;
}
.marketPrice{
  margin-left: 14rpx;
}
.down_arrow{
  width: 20rpx;
  height: 20rpx;
}
.addAreduce{
  width: 178rpx;
  height: 42rpx;
  line-height: 42rpx;
  border: 1rpx solid #cccccc;
  border-radius: 40rpx;
}
.addAreduce_shopNum{
  width: 74rpx;
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
}
.reduceBtn, addBtn{
  width: 54rpx;
}
.settlement_wrap{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top:1rpx solid #ccc;
}
.shop_total{
