<!-- 搜索 -->
<view class="page__bd">
  <mp-searchbar bindselectresult="selectResult" search="{{search}}"></mp-searchbar>
</view>
<!-- 分类 -->
<view class='classif_wrap'>
  <!-- 左侧导航 -->
  <scroll-view class="nav_left bgf6f6f6" scroll-y>
    <block wx:for="{{navLeftType}}" wx:key="*this">
      <view class="nav_left_type txt_cen fz28 {{curIndex == index ? 'clfe5746 bgfff fw' : 'cl666'}}" 
        data-index="{{index}}" 
        bindtap="curTabEvent">
        {{item.subClassName}}
         <view class="{{curIndex == index ? 'nav_left_actBar' : ''}} "></view>
      </view>
     
    </block>
  </scroll-view>
  <!-- 右侧产品内容 -->
  <scroll-view class='nav_right bgfff' scroll-y>
    <view wx:if='{{navRightCon[curIndex]}}' style='padding-bottom: 10px;'>
      <block wx:for="{{navRightCon[curIndex]}}" wx:for-item="item" wx:key="index">
        <view class='classif'>
          <view class='title'>{{item.title}}</view>
          <view class='classif_box'>
            <block wx:for="{{item.desc}}" wx:for-item="list" wx:key="index">
              <view class='classif-style' data-product="{{list.text}}" bindtap='gotoProductDetail'>
                <image class='list_img' src='{{list.img}}'></image>
                <text class='list_text'>{{list.text}}</text>
              </view>
            </block>
          </view>
        </view>
      </block>
    </view>
  </scroll-view>
</view>